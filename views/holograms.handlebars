<div class="row">
  <div class="col-md-12">
    <h1>Hologlobo</h1>

    <div class="row">
      <div class="col-md-6">
        <h2>Hologramas disponíveis</h2>
        {{#each holograms}}
          <h3>{{name}}</h3>
          <p>Categoria: {{category}}</p>
        {{/each}}
      </div>

      <div class="col-md-6">
        <h2>Enviar um holograma</h2>
        <form class="form-horizontal" method="POST" action="/holograms" enctype="multipart/form-data">
          <fieldset>

            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-2 control-label" for="name">Nome</label>  
              <div class="col-md-10">
                <input id="name" name="name" type="text" placeholder="nome" class="form-control input-md" required="">
              </div>
            </div>

            <!-- Select Basic -->
            <div class="form-group">
              <label class="col-md-2 control-label" for="category">Categoria</label>
              <div class="col-md-10">
                <select id="category" name="category" class="form-control" required="">
                  <option value="Esportes">Esportes</option>
                  <option value="Novelas">Novelas</option>
                </select>
              </div>
            </div>

            <!-- Textarea -->
            <div class="form-group">
              <label class="col-md-2 control-label" for="description">Descrição</label>
              <div class="col-md-10">                     
                <textarea class="form-control" id="description" name="description" placeholder="máx. 1024 caracteres"></textarea>
              </div>
            </div>

            <!-- File Button --> 
            <div class="form-group">
              <label class="col-md-2 control-label" for="model">Modelo</label>
              <div class="col-md-10">
                <input id="model" name="model" class="input-file" type="file" required="">
              </div>
            </div>

            <!-- File Button --> 
            <div class="form-group">
              <label class="col-md-2 control-label" for="mtl">MTL</label>
              <div class="col-md-10">
                <input id="mtl" name="mtl" class="input-file" type="file" required="">
              </div>
            </div>

            <!-- File Button --> 
            <div class="form-group">
              <label class="col-md-2 control-label" for="texture">Textura</label>
              <div class="col-md-10">
                <input id="texture" name="texture" class="input-file" type="file" required="">
              </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-2 control-label" for="date">Data</label>  
              <div class="col-md-10">
                <input id="date" name="date" type="date" class="form-control input-md" value="{{date}}">
              </div>
            </div>

            <!-- Text input-->
            <div class="form-group">
              <label class="col-md-2 control-label" for="time">Hora</label>  
              <div class="col-md-10">
                <input id="time" name="time" type="time" class="form-control input-md" value="{{time}}">
              </div>
            </div>

            <!-- Button -->
            <div class="form-group">
              <label class="col-md-2 control-label" for="submit"></label>
              <div class="col-md-10">
                <button id="submit" name="submit" class="btn btn-primary">Enviar</button>
              </div>
            </div>

          </fieldset>
        </form>

      </div>
    </div>  
  </div>
</div>